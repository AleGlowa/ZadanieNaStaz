         <OBJECT_CONTRACT>
            <TITLE>
               <P>Security Operations Centre (SOC) Services</P>
            </TITLE>
            <REFERENCE_NUMBER>2018/1354/SOC/PH/JL</REFERENCE_NUMBER>
