         <OBJECT_CONTRACT>
            <TITLE>
               <P>Signalisation Rieu Sec</P>
            </TITLE>
            <REFERENCE_NUMBER>SES/AO/AUT/17-22</REFERENCE_NUMBER>
            <CPV_MAIN>
               <CPV_CODE CODE="34924000"/>
