               <AC_COST>
                  <AC_CRITERION>Qualité de l'entreprise en matière de développement durable</AC_CRITERION>
                  <AC_WEIGHTING>5 %</AC_WEIGHTING>
               </AC_COST>
               <DATE_START>2018-01-01</DATE_START>
               <DATE_END>2020-12-31</DATE_END>
               <RENEWAL/>
