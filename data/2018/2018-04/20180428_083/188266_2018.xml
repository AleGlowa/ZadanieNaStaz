            <TITLE>
               <P>Suchtberatung im Landkreis Sonneberg</P>
            </TITLE>
            <REFERENCE_NUMBER>1.20.3-OV 2/18</REFERENCE_NUMBER>
            <CPV_MAIN>
               <CPV_CODE CODE="85000000"/>
            </CPV_MAIN>
            <SHORT_DESCR>
               <P>Suchtberatung im Landkreis Sonneberg ab dem 1.1.2019 bis zum 31.12.2022.</P>
            </SHORT_DESCR>
            <NO_LOT_DIVISION/>
            <OBJECT_DESCR ITEM="1">
               <CPV_ADDITIONAL>
                  <CPV_CODE CODE="85100000"/>
               </CPV_ADDITIONAL>
               <CPV_ADDITIONAL>
                  <CPV_CODE CODE="85312320"/>
               </CPV_ADDITIONAL>
               <CPV_ADDITIONAL>
                  <CPV_CODE CODE="98000000"/>
