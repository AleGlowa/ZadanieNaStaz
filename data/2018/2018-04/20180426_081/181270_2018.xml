         <OBJECT_CONTRACT>
            <TITLE>
               <P>Markterkundung / Markterkundungstest für die Beschaffung von Transportern zum Ausbau mit Spezialtechnik für die Weichenreingiung und Weichenrevision (Straßenbahn)</P>
            </TITLE>
            <CPV_MAIN>
               <CPV_CODE CODE="34136200"/>
            </CPV_MAIN>
            <TYPE_CONTRACT CTYPE="SUPPLIES"/>
            <OBJECT_DESCR>
               <CPV_ADDITIONAL>
                  <CPV_CODE CODE="34136000"/>
               </CPV_ADDITIONAL>
