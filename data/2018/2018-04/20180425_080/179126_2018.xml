         <OBJECT_CONTRACT>
            <TITLE>
               <P>Structural Testing of Street Lighting Columns 2018</P>
            </TITLE>
            <REFERENCE_NUMBER>DN335311</REFERENCE_NUMBER>
            <CPV_MAIN>
