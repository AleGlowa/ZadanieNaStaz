            <TITLE>
               <P>Sanierungsberatung der Stadt Bottrop</P>
            </TITLE>
            <REFERENCE_NUMBER>S-BOT-ZV-2017-0149</REFERENCE_NUMBER>
            <CPV_MAIN>
               <CPV_CODE CODE="71314300"/>
